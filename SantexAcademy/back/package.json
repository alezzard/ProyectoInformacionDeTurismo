{
  "name": "santex-academy-api",
  "version": "1.0.0",
  "private": true,
  "config": {},
  "scripts": {
    "prod": "node ./bin/www",
    "start": "node ./bin/app",
    "clean": "rimraf ./node_modules",
    "lint-staged": "npx lint-staged",
    "seed": "node ./config/seed",
    "start:dev": "nodemon ./bin/app",
    "db:create": "npx sequelize-cli db:create",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed:all": "npx sequelize-cli db:seed:all"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^8.6.0",
    "envalid": "^7.3.1",
    "express": "^4.17.3",
    "express-session": "^1.17.3",
    "express-validator": "6.6.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^9.0.1",
    "lint-staged": "^10.5.4",
    "moment": "^2.29.4",
    "morgan": "~1.10.0",
    "mysql2": "^2.3.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "sequelize": "^6.29.0",
    "sequelize-cli": "^6.6.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-transport": "^4.5.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^4.3.8",
    "nodemon": "^2.0.21"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint --fix",
      "git add"
    ]
  }
}
